    <title>Home Posts</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary  bg-primary">
  <div class="container-fluid">
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="navbar-brand" aria-current="page" href="#">MY BLOG</a>
        </li>
        <li class="nav-item">
            <a class="navbar-brand" aria-current="page" href="/newblog">NEW BLOG</a>
        </li>
      </ul>
    </div>
  </div>
</nav>
    <h1> Bienvenue sur la page</h1>
    <h3> Voici les posts</h3>
    <% data.forEach((blog) => {%>
<h4> <%= blog.titre %></h4><br>

<h5><%= blog.sousTiltre %> </h5><br>
<p><%= blog.auteur %> </p><br>
<p><%= blog.description %> </p><br>
<p>_id: <%= blog._id %> </p><br>

<a href="/blog/<%= blog._id %>">
    <div class="col-6 mt-4 mb-3 ">

<button type="button" class="btn btn-warning">Editer</button>
</div>
</a>
<form action="/deleteblog/<%= blog._id %>?_method=DELETE" method="post">
    <div class="col-6 mt-4 mb-3 ">

    <input type="hidden" name="_method" value="DELETE" >
        <!-- button supprimer -->
        <input type="submit" value="supprimer" class="btn btn-danger">
    </div>
        </form>

  <%  }) %>
    
</body>
</html>